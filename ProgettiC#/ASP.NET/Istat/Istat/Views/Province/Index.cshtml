@model IEnumerable<Istat.Models.Provincia>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Denominazione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sigla)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodiceCittaMetropolitana)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdRegioneNavigation.Denominazione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Superficie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Denominazione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sigla)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodiceCittaMetropolitana)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdRegioneNavigation.Denominazione)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Superficie) Km<sup>2</sup>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
