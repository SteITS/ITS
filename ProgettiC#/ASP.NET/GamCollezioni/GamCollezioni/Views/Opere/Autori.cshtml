@model IEnumerable<string>

@{
    ViewData["Title"] = "Autori";
}

<h1>Elenco Autori</h1>
<p>
    @{
        var pattern = "ABCDEFGHIKLMNOPQRSTUVWXYZ";

        for(int i=0; i < pattern.Length; i++)
        {
            <a>@pattern[i]</a>
            @foreach (var item in Model)
            {
                if (item.StartsWith(pattern[i]))
                {
                    <a href="/Opere/index?autore=@item">@item</a>
                }            
            }
            <br />
            <hr />
            <br />
        }
    }
</p>

