@model IEnumerable<PrestitiVideoteca.Models.Film>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form>
    <p>
        <select name="genere">
            <option value="tutti">tutti</option>
            @{
                var lista = (List<string>)ViewBag.Genere;
                    foreach (var genere in lista)
                {
                    @if(ViewBag.GenereSelezionato == genere){
                        <option value="@genere" selected>@genere</option>
                    }else{
                        <option value="@genere">@genere</option>
                    }
                }
            }
            <input type="submit" value="Cerca"/>    
        </select>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titolo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supporto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Regista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attori)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genere)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titolo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supporto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Regista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attori)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genere)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Codice">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Codice">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Codice">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
